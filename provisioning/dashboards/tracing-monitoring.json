{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "datasource": "Prometheus",
      "description": "Current operational mode of the tracing system. OFF=0, SYSTEM-ONLY=1, HYBRID=2, FULL-E2E=3",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "OFF",
                  "color": "dark-gray"
                },
                "1": {
                  "text": "SYSTEM-ONLY",
                  "color": "light-blue"
                },
                "2": {
                  "text": "HYBRID",
                  "color": "green"
                },
                "3": {
                  "text": "FULL-E2E",
                  "color": "orange"
                }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "dark-gray",
                "value": null
              },
              {
                "color": "light-blue",
                "value": 1
              },
              {
                "color": "green",
                "value": 2
              },
              {
                "color": "orange",
                "value": 3
              }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "textMode": "value",
        "text": {
          "titleSize": 16,
          "valueSize": 48
        }
      },
      "pluginVersion": "8.0.0",
      "targets": [
        {
          "expr": "sum(log_capturer_tracing_mode * on(mode) group_left label_replace(log_capturer_tracing_mode, \"value\", \"0\", \"mode\", \"off\")) or\nsum(log_capturer_tracing_mode * on(mode) group_left label_replace(log_capturer_tracing_mode, \"value\", \"1\", \"mode\", \"system-only\")) or\nsum(log_capturer_tracing_mode * on(mode) group_left label_replace(log_capturer_tracing_mode, \"value\", \"2\", \"mode\", \"hybrid\")) or\nsum(log_capturer_tracing_mode * on(mode) group_left label_replace(log_capturer_tracing_mode, \"value\", \"3\", \"mode\", \"full-e2e\"))",
          "refId": "A",
          "legendFormat": "{{mode}}"
        }
      ],
      "title": "Current Tracing Mode",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "description": "Current sampling rate for log tracing in hybrid mode (0.0 = 0%, 1.0 = 100%)",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "orange",
                "value": 50
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "id": 2,
      "options": {
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "text": {}
      },
      "pluginVersion": "8.0.0",
      "targets": [
        {
          "expr": "log_capturer_tracing_sampling_rate * 100",
          "refId": "A",
          "legendFormat": "Sampling Rate %"
        }
      ],
      "title": "Sampling Rate",
      "type": "gauge"
    },
    {
      "datasource": "Prometheus",
      "description": "Number of active on-demand tracing rules (targeted tracing for specific sources)",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "gray",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "orange",
                "value": 10
              }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "id": 3,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "textMode": "value_and_name",
        "text": {}
      },
      "pluginVersion": "8.0.0",
      "targets": [
        {
          "expr": "log_capturer_tracing_on_demand_rules_active",
          "refId": "A",
          "legendFormat": "Active Rules"
        }
      ],
      "title": "On-Demand Rules",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "description": "Adaptive sampling status: 0 = INACTIVE, 1 = ACTIVE (triggered by high latency)",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "INACTIVE",
                  "color": "gray"
                },
                "1": {
                  "text": "ACTIVE",
                  "color": "green"
                }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "gray",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "id": 4,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "textMode": "value",
        "text": {}
      },
      "pluginVersion": "8.0.0",
      "targets": [
        {
          "expr": "log_capturer_tracing_adaptive_sampling_active",
          "refId": "A",
          "legendFormat": "Adaptive Sampling"
        }
      ],
      "title": "Adaptive Sampling Status",
      "type": "stat"
    },
    {
      "datasource": "Prometheus",
      "description": "Rate of individual log entries being traced per second",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "logs/sec",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 20,
            "gradientMode": "opacity",
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
            },
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": true
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          },
          "unit": "ops"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      },
      "id": 5,
      "options": {
        "legend": {
          "calcs": ["mean", "last", "max"],
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      },
      "pluginVersion": "8.0.0",
      "targets": [
        {
          "expr": "rate(log_capturer_tracing_logs_traced_total[5m])",
          "refId": "A",
          "legendFormat": "Logs Traced/sec"
        }
      ],
      "title": "Logs Traced per Second",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Rate of spans created by type (log vs system operations)",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "spans/sec",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 30,
            "gradientMode": "none",
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
            },
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": true,
            "stacking": {
              "mode": "normal",
              "group": "A"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          },
          "unit": "ops"
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "log"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "light-blue"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "system"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "light-green"
                }
              }
            ]
          }
        ]
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      },
      "id": 6,
      "options": {
        "legend": {
          "calcs": ["mean", "last", "max"],
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      },
      "pluginVersion": "8.0.0",
      "targets": [
        {
          "expr": "rate(log_capturer_tracing_spans_created_total[5m])",
          "refId": "A",
          "legendFormat": "{{span_type}}"
        }
      ],
      "title": "Spans Created by Type (Stacked)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Comparison of spans successfully exported vs dropped (with drop reasons)",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "spans/sec",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 20,
            "gradientMode": "none",
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
            },
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": true
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          },
          "unit": "ops"
        },
        "overrides": [
          {
            "matcher": {
              "id": "byRegexp",
              "options": "Exported"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "green"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byRegexp",
              "options": "Dropped.*"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          }
        ]
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 14
      },
      "id": 7,
      "options": {
        "legend": {
          "calcs": ["mean", "last", "max"],
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      },
      "pluginVersion": "8.0.0",
      "targets": [
        {
          "expr": "rate(log_capturer_tracing_spans_exported_total[5m])",
          "refId": "A",
          "legendFormat": "Exported"
        },
        {
          "expr": "rate(log_capturer_tracing_spans_dropped_total[5m])",
          "refId": "B",
          "legendFormat": "Dropped ({{reason}})"
        }
      ],
      "title": "Spans Export Status",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "description": "Estimated CPU overhead based on current tracing mode and sampling rate",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "axisLabel": "CPU Overhead %",
            "axisPlacement": "auto",
            "barAlignment": 0,
            "drawStyle": "line",
            "fillOpacity": 40,
            "gradientMode": "scheme",
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
            },
            "lineInterpolation": "smooth",
            "lineWidth": 3,
            "pointSize": 5,
            "scaleDistribution": {
              "type": "linear"
            },
            "showPoints": "never",
            "spanNulls": true
          },
          "mappings": [],
          "max": 15,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 3
              },
              {
                "color": "orange",
                "value": 5
              },
              {
                "color": "red",
                "value": 8
              }
            ]
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 14
      },
      "id": 8,
      "options": {
        "legend": {
          "calcs": ["mean", "last", "max"],
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "pluginVersion": "8.0.0",
      "targets": [
        {
          "expr": "(\n  (log_capturer_tracing_mode{mode=\"off\"} * 0) +\n  (log_capturer_tracing_mode{mode=\"system-only\"} * 1) +\n  (log_capturer_tracing_mode{mode=\"hybrid\"} * (1 + log_capturer_tracing_sampling_rate * 9)) +\n  (log_capturer_tracing_mode{mode=\"full-e2e\"} * 10)\n)",
          "refId": "A",
          "legendFormat": "Estimated CPU Overhead %"
        }
      ],
      "title": "Estimated CPU Overhead",
      "type": "timeseries"
    }
  ],
  "refresh": "10s",
  "schemaVersion": 27,
  "style": "dark",
  "tags": ["tracing", "opentelemetry", "monitoring"],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "browser",
  "title": "OpenTelemetry Tracing Monitoring",
  "uid": "tracing-monitoring",
  "version": 1,
  "description": "Comprehensive monitoring dashboard for OpenTelemetry tracing system with 4 operational modes (OFF, SYSTEM-ONLY, HYBRID, FULL-E2E), adaptive sampling, and on-demand tracing controls"
}
